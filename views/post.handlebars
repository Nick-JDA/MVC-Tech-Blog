<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
   {{#each comments as |comment|}}
  <div class="col-md-8">
        <h6>Comment by:{{comment.user.name}} on {{format_date comment.date_created}}</h6>
        <p>{{comment.comment}}</p>
  </div>
  {{/each}}
</div>

<div class="row mt-4"></div>
  {{#if logged_in}}
    <div class="col-md-6">
      <form class="form new-project-form" id="add-comment">
        <div class="form-group">
          <label for="post-comment">comment:</label>
          <textarea class="form-input" id="comment-text"></textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Add
            Comment
          </button>
        </div>
      </form>
    </div>
  {{else}}
    <h4>
      <a href="/login">Login to add a Comment</a>
    </h4>
  {{/if}}
</div>

<script src="/js/addComment.js"></script>